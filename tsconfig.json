{
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "outDir": "./dist" ,
    "baseUrl": "./src",
    "paths": {
      "*": ["src/*"]
    }                         
  },
  "include": [
    "src/**/*.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "lib": [
    "es2015"
  ],
  "typeRoots": [
    "node_modules/@types"
  ],
  "types": [
    "node",
    "express"
  ]
}